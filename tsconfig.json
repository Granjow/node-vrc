{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "target": "ES6",
    "lib": [
     "es2018"
    ]
  },
  "include": [
    "src/**/*",
    "spec/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
